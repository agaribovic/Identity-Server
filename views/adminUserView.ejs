<!doctype html>
<html>

<head>
    <% include partials/head %>
    <% include partials/customCss %>
</head>
<body>
    <div class="container admin-panel-form">
        <div class="custom-container">
            <h2 align="center">User List</h2>
            <div class="row">
                <div class="col-md-6">
                        <a href="/adminPanel"><i class="fas fa-chevron-left"></i> Back</a>
                    </div>
                    <div class="col-md-6">
                        <a style="float:right" href="/adminUserAdd"><i class="fas fa-user-plus"></i> Add a new user</a>
                </div>
            </div>
                        
            <table class="table custom-table mt-20">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                    <th class="text-right">Status</th>
                </tr>
                <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/adminEditUser/<%= user._id %>">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/deleteUser/<%= user._id %>" class="custom-trash">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                    <td>
                        <a href="/adminEnableUser/<%= user._id %>">
                            <% if(user.enabled === false){ %>
                            <button class="btn btn-danger">Disabled</button>
                            <% }else{ %>
                            <button class="btn btn-success" style="width: 87px">Enabled</button>
                            <% } %>
                        </a>
                    </td>
                    <!-- <td><%= user.enabled %></td> -->
                </tr>
                <% }) %>
            </table>

            <div class="footer mt-40">
                <div class="col-md-6 offset-md-3 text-center">
                    <p>Â© 2019 Copyright By Apollo Team</p>
                </div>
            </div>
        </div>
    </div>
        
</body>
</html>