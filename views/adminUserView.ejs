<!doctype html>
<html>

<head>
    <% include partials/head %>
    <% include partials/customCss %>
</head>

<body>
    <div class="container admin-panel-form">
        <div class="custom-container">
            <h2 align="center">User List</h2>
            <div class="row">
                <div class="col-md-6">
                    <a href="/adminPanel"><i class="fas fa-chevron-left"></i> Back</a>
                </div>
                <div class="col-md-6">
                    <a style="float:right" href="/adminUserAdd"><i class="fas fa-user-plus"></i> Add a new user</a>
                </div>
            </div>

            <table class="table custom-table mt-20">
                <tr>
                    <th>Date created</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th class="text-right">Actions</th>
                </tr>
                <% users.forEach(function(user, i) { %>
                <tr>
                    <td><%= user.stringCreated %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/adminEnableUser/<%= user._id %>">
                            <% if(user.enabled === false){ %>
                            <i class="btn btn-custom-disabled">Disabled</i>
                            <% }else{ %>
                            <i class="btn btn-custom-enabled">Enabled</i>
                            <% } %>
                        </a>
                    </td>
                    <td>
                        <a class="mr-10" href="/usersClients/<%= user._id %>" data-toggle="popover" data-placement="bottom" data-trigger="hover" data-content="Clients List">
                            <i class="fas fa-list"></i>
                        </a>
                        <a href="/adminEditUser/<%= user._id %>" data-toggle="popover" data-placement="bottom" data-trigger="hover" data-content="Edit User">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/deleteUser/<%= user._id %>" class="custom-trash mr-10" data-toggle="popover" data-placement="bottom" data-trigger="hover" data-content="Delete User">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                        <a href="/assignments/<%= user._id %>" data-toggle="popover" data-placement="bottom" data-trigger="hover" data-content="Assignement">
                            <i class="fas fa-puzzle-piece" ></i>
                        </a>
                    </td>
                </tr>
                <% }) %>
            </table>

            <div class="footer mt-40">
                <div class="col-md-6 offset-md-3 text-center">
                    <p>Â© 2019 Copyright By Apollo Team</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Popover --> 
    <script>
    $(function () {
        $('[data-toggle="popover"]').popover()
    })
    </script>

</body>

</html>