<!doctype html>
<html>

<head>
    <% include partials/head %>
</head>

<body>
    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h1 align="center"><span class="fa fa-sign-in"></span> User add </h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <a href="/adminPanel"><i class="fas fa-chevron-left"></i> Admin panel</a>
            <a style="float:right" href="/adminUserView"><i class="fas fa-users"></i> Users</a>
            <form action="/signup" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="plainText" required>
                </div>

                <button type="submit" class="btn btn-warning btn-lg">Add</button>
            </form>

            <hr>
        </div>

    </div>
</body>

</html>