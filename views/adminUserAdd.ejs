<!doctype html>
<html>
<head>
    <% include partials/head %>
    <% include partials/customCss %>
</head>

<body>
    <div class="container custom-form">
        <div class="custom-container">
            <h2 class="text-center">New User</h2>
            <div class="row mt-10 mb-10">
                <div class="col-md-6">
                        <a href="/adminPanel"><i class="fas fa-chevron-left"></i> Admin panel</a>
                    </div>
                    <div class="col-md-6">
                        <a style="float:right" href="/adminUserView"><i class="fas fa-user-plus"></i> Users</a>
                </div>
            </div>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <form action="/signup" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="" required>
                </div>
                <div class="form-group">            
                        <input type="hidden" class="form-control" id="id" value="adminDidThis">
                    </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="plainText" required>
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control" name="enabled" value="false">
                </div>

                <button type="submit" class="btn btn-custom-primary">Add</button>
            </form>

            <div class="footer mt-40">
                <div class="text-center">
                    <p>Â© 2019 Copyright By Apollo Team</p>
                </div>
            </div>
        </div>
    </div>
</body>

</html>