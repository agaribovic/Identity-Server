<!DOCTYPE html>
<html>

<head>
    <% include partials/head %>
    <% include partials/customCss %>
</head>

<body>
    <div class="container custom-form assignment">
        <div class="custom-container">
            <h2 class="text-center">Assignments</h2>
            <div class="row">
                <div class="col-md-6 pl-0">
                    <a href="/adminPanel"><i class="fas fa-chevron-left"></i> Back</a>
                </div>
            </div>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- DROPDOWN FORM -->
            <form class="mt-20" action="/assignments" method="post">
                <div class="row arrange">
                    <div class=" pr-10">
                        <div class="dropdown">
                            <label for="">Users: </label><br>
                            <% if(users.length !== 1){ %>
                            <select name="user" class="form-control" required>
                                <option class="notSelected" value="" selected>Select a user</option>
                                <% users.forEach(function(user) { %>
                                <option type="text" value="<%= user._id %>"><%= user.name%></option>
                                <% } )%>
                            </select>
                            <% }else{ %>
                            <select name="user" class="form-control" required>
                                <% users.forEach(function(user) { %>
                                <option type="text" value="<%= user._id %>" selected><%= user.name%></option>
                                <% }) %>
                            </select>
                            <% } %>
                        </div>
                    </div>
                    <div class=" pr-10">
                        <div class="dropdown">
                            <label for="">Clients: </label><br>
                           
                            <% if(clients.length !== 1){ %>
                            <select name="client" class="form-control" required>
                                <option class="notSelected" value="" selected>Select a client</option>
                                <% clients.forEach(function(client) { %>
                                <option type="text" value="<%= client._id %>"><%= client.name%></option>
                                <% }) %>
                            </select>
                            <% }else{ %>
                            <select name="client" class="form-control" required>
                                <option class="notSelected" value="" selected>Select a client</option>
                                <% clients.forEach(function(client) { %>
                                <option type="text" value="<%= client._id %>" selected><%= client.name%></option>
                                <% }) %>
                            </select>
                            <% } %>


                        </div>
                    </div>

                    <div class=" pr-10">
                        <div class="dropdown">
                            <label for="">Role: </label><br>

                            <select name="role" class="form-control" required>
                                <option class="notSelected" value="" selected>Select a role</option>
                                <option type="text" value="Admin">Guest</option>
                                <option type="text" value="User">User</option>
                                <option type="text" value="User">Lead</option>
                                <option type="text" value="User">Admin</option>
                            </select>
                        </div>
                    </div>
                    <div class=" pr-10 mt31">
                        <div class="col-md-8"></div>
                        <div class="col-md-4 text-right "><button type="submit"
                                class="btn btn-custom-primary">Assign</button></div>
                    </div>
                </div>
                <br>
            </form>

            <div class="footer mt-40">
                <div class="text-center">
                    <p>Â© 2019 Copyright By Apollo Team</p>
                </div>
            </div>
        </div>
    </div>
</body>

</html>