<!doctype html>
<html>
<head>
    <% include partials/head %>
    <% include partials/customCss %>
</head>

<body>
    <div class="container custom-form">
        <div class="custom-container">
            <h2 class="text-center">User edit</h2>
            <div class="row">
                <div class="col-md-6 mt-10 mb-10">
                    <a  href="/adminUserView"><i class="fas fa-chevron-left"></i> Back</a>
                </div>
            </div>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/adminEditUser" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="<%= user.name %>" required>
                    <input type="hidden" class="form-control" name="id" value="<%= user.id %>">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email"  value = "<%= user.email %>"required>
                </div>
                
                <button type="submit" class="btn btn-custom-primary">Submit</button>
            </form>

            <div class="footer mt-40">
                <div class="text-center">
                    <p>Â© 2019 Copyright By Apollo Team</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>