<!doctype html>
<html>
<head>
    <% include partials/head %>
    <% include partials/customCss %>
<script>
document.getElementById('datePicker').value =new Date().toDateInputValue();
document.getElementById('datePicker').value =Date().now
</script>
</head>
<body>
    <div class="container custom-form">

        <div class="custom-container">
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>
        <h2 class="text-center">Client profile</h2>
        <div class="row">
                <div class="col-md-6 mt-10 mb-10">
                    <a  href="/clients"><i class="fas fa-chevron-left"></i> Back</a>
                </div>
            </div>
        

        <!-- LOGIN FORM -->
        <form action="/editClient" method="post">
            <!-- <div class="form-group">
                <label>ClientCode</label>
                <input type="text" class="form-control" name="ClientCode">
            </div> -->
           
            <div class="form-group">
                <label>Client Name</label>
                <input type="text" class="form-control" name="name" value="<%= client.name %>">
            </div>       
            <div class="form-group">
                <!-- <label>Claims</label> -->
                <input type="hidden" class="form-control" name="claims"value="<%= client.claims%>">
            </div>
            <div class="form-group">
                <!-- <label>Secret</label> -->
                <input type="hidden" class="form-control" name="secret"value="<%= client.secret%>">
            </div>
            <div class="form-group">
                <label>Redirect</label>
                <input type="text" class="form-control" name="redirect"value="<%= client.redirect%>">
            </div>
            <div class="form-group">
                    <label></label>
                    <input  type="hidden" class="form-control" name="id" value="<%= client.id%>">
                </div> 
            <!-- <div class="form-group">
                <label>DateCreated</label>
                <input type="date" class="form-control" id="datePicker" >
            </div> -->
            <button type="submit" class="btn btn-custom-primary">Submit</button>
        </form>
